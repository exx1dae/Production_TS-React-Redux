{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true, // подсвечивает все места без типа, разработчик должен прописывать any в таких случаях
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    // esModuleInterop - позволяет работать с пакетами, которые использует common js как с обычными с помощью import
    "esModuleInterop": true,
    // allowSynthetic... позволяет импортировать без * as ...
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}